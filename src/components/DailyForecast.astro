---
import DailyData from './DailyData.astro';

interface Props {
    dailyTime: Array<Date>;
    dailyWeatherCodes: Float32Array;
}

const {dailyTime, dailyWeatherCodes} = Astro.props;
---

<div class="flex flex-col">
    <h1 class="text-3xl font-light tracking-wide">Upcoming Days</h1>
    <div class="flex flex-row">
        {dailyTime.map((time, index) => (
            <DailyData 
                time={time}
                weatherCode={dailyWeatherCodes[index]}
            />
        ))}
    </div>
</div>